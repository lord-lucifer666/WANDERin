<% layout('../layout/basicLayout') -%>

    <body class="bg-light">


        <div class="return-home position-fixed top-0 end-0 m-3">
            <form method="get" action="/home">
                <button class="btn btn-outline-primary">
                    <i class="fas fa-home"></i>
                </button>
            </form>
        </div>


        <div class="container mt-5 mb-5">
            <div class="row justify-content-center">
                <div class="col-12 col-sm-10 col-md-8 col-lg-6">

                    <div class="card shadow-sm" style="width: 100%;">
                        <form method="post" action="/listings">
                            <div class="card-body">
                                <h5 class="card-title mb-3 text-center">Create a New Listing</h5>

                                <div class="mb-3">
                                    <label class="form-label"><b>Title</b></label>
                                    <input name="Listing[title]" required placeholder="Enter your title"
                                        class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><b>Description</b></label>
                                    <input name="Listing[description]" placeholder="Enter your description"
                                        class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><b>Image URL</b></label>
                                    <input name="Listing[image]" placeholder="Enter your image URL"
                                        class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><b>Price</b></label>
                                    <input name="Listing[price]" type="number" placeholder="Enter your price"
                                        class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><b>Location</b></label>
                                    <input name="Listing[location]" placeholder="Enter your location"
                                        class="form-control">
                                </div>

                                <div class="mb-3">
                                    <label class="form-label"><b>Country</b></label>
                                    <input name="Listing[country]" placeholder="Enter your country"
                                        class="form-control">
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button class="btn btn-primary w-100">Post Listing</button>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
        <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    </body>
    </html>